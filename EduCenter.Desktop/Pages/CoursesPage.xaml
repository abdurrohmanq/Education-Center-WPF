<Page x:Class="EduCenter.Desktop.Pages.CoursesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduCenter.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoursesPage"
      Loaded="Page_Loaded">
    <Grid>
        <Border Margin="10">
            <Grid Margin="0 5 0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Border CornerRadius="10"
                            Background="{DynamicResource PrimaryBackground}"
                            Width="400">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Grid.Column="0"
                                  Margin="3 0 0 0"
                                  Height="20" Width="20" Stretch="Uniform"
                                  Fill="{DynamicResource PrimaryTextColor}"
                                  Data="{DynamicResource search}"/>
                            <TextBox x:Name="tbSearch"
                                     Grid.Column="1"
                                     VerticalAlignment="Center"
                                     FontSize="16"
                                     Margin="5 0 5 0"
                                     FontFamily="Jetbrains Mono"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource PrimaryTextColor}"
                                     Background="{DynamicResource PrimaryBackground}"/>
                        </Grid>
                    </Border>
                    <Button x:Name="btnCreate"
                            Click="btnCreate_Click"
                            Content="Create"
                            Style="{DynamicResource SuccessButton}"/>
                </StackPanel>
                <ScrollViewer Margin="5 5 0 5"
                              Grid.Row="1">
                    <WrapPanel x:Name="wrpCourses">
                    
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
